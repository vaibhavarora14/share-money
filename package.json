{
  "name": "sharemoney",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "mobile",
    "netlify"
  ],
  "scripts": {
    "install": "npm install",
    "dev:mobile": "npm run start --workspace=mobile",
    "dev:server": "npm run dev --workspace=netlify",
    "dev": "npm run dev:server & npm run dev:mobile",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json}\""
  },
  "devDependencies": {
    "@supabase/supabase-js": "^2.80.0",
    "prettier": "^3.0.0"
  }
}